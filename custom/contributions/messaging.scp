src.ctag0.receiver=
if <def.perisitent_notification>
	if <LIST.<src.account>_message.COUNT>
		src.dialog d_pm_notify
	endif
endif
return 1

on=1 
local.recipient = <uid.<src.ctag0.receiver>.account>
if (<src.tag0.private>)
	src.sysmessage @,,1 "Private" mode is Enabled, you are not allowed to send messages. Use .private to Disable.
	return 1
endif
if (<uid.<src.ctag0.receiver>.tag0.private>)
	src.sysmessage @,,1 <uid.<src.ctag0.receiver>.name> has Privacy Enabled and cannot receive messages at this time.
	return 1
endif
if !(<isempty <argtxt[0]>>)
	if (<eval <list.<local.recipient>_message.COUNT>> < 1000)
		src.sysmessage @,,1 Message Sent!	
		if !(<src.isgm>)
			list.<local.recipient>_message.add <argtxt[0]> 
			list.<local.recipient>_sender.add <src.uid>
			list.<local.recipient>_time.add <serv.rtime.format %c>
		else
			if <list.<local.recipient>_message.COUNT>
				list.<local.recipient>_message.0.insert <argtxt[0]> 
				list.<local.recipient>_sender.0.insert <src.uid>
				list.<local.recipient>_time.0.insert <serv.rtime.format %c>
			else
				list.<local.recipient>_message.add <argtxt[0]> 
				list.<local.recipient>_sender.add <src.uid>
				list.<local.recipient>_time.add <serv.rtime.format %c>
			endif
		endif

		if !(<isonline>)
			src.sysmessage @,,1 <uid.<src.ctag0.receiver>.name> is offline, they will receive the message when they next log on.
		endif
		trysrc <src.ctag0.receiver> TRIGGER @MsgPending
	else
		src.sysmessage @,,1 Player inbox full.  Message not sent!
	endif
else
	src.sysmessage @,,1 You didn't enter any text, right click to cancel sending a message.
	dialog d_playermsg
	return 1
endif
src.ctag.receiver=
if <def.perisitent_notification>
	if <LIST.<src.account>_message.COUNT>
		src.dialog d_pm_notify
	endif
endif

