[function private]
if (<tag0.private>)
	tag.private=
	Sysmessage @,,1 Privacy Disabled
else
	tag.private=1
	sysmessage @,,1 Privacy Enabled
	sysmessage @,,1 You will not be able to send or receive PM's while Privacy is Enabled
endif

