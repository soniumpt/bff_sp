         link.SAY <SRC.NAME> gets the ball!!! 
      ENDDO
      MORE1 = <SRC.UID>
      link.tag.name = <SRC.NAME>
   ENDIF
ELSE
  SRC.move 0 0 4
  link.SAY Out of Bounds (<link.tag.name>)
ENDIF
RETURN 1

ON=@TARGON_ITEM
