[function f_goalcheck]
IF strmatch("<REGION.NAME>","South Goal")
  IF (<var.southgoaldefender> == 1)
	serv.allclients announcegoal GOALLLLLLLLLLLLLLLLLL!!!!!!!!
	serv.allclients announcegoal Blue Team Scores!!!!!!!!
	var.footballteam2score = <eval <var.footballteam2score> + 1>
	serv.allclients resetplayers
	resetball
	serv.allclients announcegoal Blue <eval <var.footballteam2score>> Red <eval <var.footballteam1score>>
  ELSEIF (<var.southgoaldefender> == 2)
	serv.allclients announcegoal GOALLLLLLLLLLLLLLLLLL!!!!!!!!
	serv.allclients announcegoal Red Team Scores!!!!!!!!
	var.footballteam1score = <eval <var.footballteam1score> + 1>
	serv.allclients resetplayers
	resetball
	serv.allclients announcegoal Blue <eval <var.footballteam2score>> Red <eval <var.footballteam1score>>
  ENDIF
elseIF strmatch("<REGION.NAME>","North Goal")
  IF (<var.northgoaldefender> == 1)
	serv.allclients announcegoal GOALLLLLLLLLLLLLLLLLL!!!!!!!!
	serv.allclients announcegoal Blue Team Scores!!!!!!!!
	var.footballteam2score = <eval <var.footballteam2score> + 1>
	serv.allclients resetplayers
	resetball
	serv.allclients announcegoal Blue <eval <var.footballteam2score>> Red <eval <var.footballteam1score>>
  ELSEIF (<var.northgoaldefender> == 2)
	serv.allclients announcegoal GOALLLLLLLLLLLLLLLLLL!!!!!!!!
	serv.allclients announcegoal Red Team Scores!!!!!!!!
	var.footballteam1score = <eval <var.footballteam1score> + 1>
	serv.allclients resetplayers
	resetball
	serv.allclients announcegoal Blue <eval <var.footballteam2score>> Red <eval <var.footballteam1score>>
  ENDIF
elseIF strmatch("<REGION.NAME>","Out of bounds")
serv.allclients announcegoal Out of bounds
resetball
endif

