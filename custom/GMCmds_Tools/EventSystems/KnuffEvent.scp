[FUNCTION moveball]
if (<src.account.plevel> < 2)
IF (0<src.tag.kick> = 1) && (<src.stamina> >= 30 )
   TRY UID.<tag.w>.move <args> 5
   TRY UID.<tag.e>.move <args> 5
   TRY UID.<tag.s>.move <args> 5
   TRY UID.<tag.n>.move <args> 5
   TRY UID.<tag.ne>.move <args> 5
   TRY UID.<tag.nw>.move <args> 5
   TRY UID.<tag.sw>.move <args> 5
   TRY UID.<tag.se>.move <args> 5
   move <args> 5
   src.stamina = <eval <src.stamina> - 30>
   src.tag.kick
   src.emote kick the ball
   f_goalcheck
ELSEIF (0<src.tag.kick> = 2) && (<src.stamina> >= 50 )
   TRY UID.<tag.w>.move <args> 8
   TRY UID.<tag.e>.move <args> 8
   TRY UID.<tag.s>.move <args> 8
   TRY UID.<tag.n>.move <args> 8
   TRY UID.<tag.ne>.move <args> 8
   TRY UID.<tag.nw>.move <args> 8
   TRY UID.<tag.sw>.move <args> 8
   TRY UID.<tag.se>.move <args> 8
   move <args> 8
   src.stamina = <eval <src.stamina> - 50>
   src.tag.kick
   src.emote shoot the ball
   f_goalcheck
ELSE
   TRY UID.<tag.w>.move <args>
   TRY UID.<tag.e>.move <args>
   TRY UID.<tag.s>.move <args>
   TRY UID.<tag.n>.move <args>
   TRY UID.<tag.ne>.move <args>
   TRY UID.<tag.nw>.move <args>
   TRY UID.<tag.sw>.move <args>
   TRY UID.<tag.se>.move <args>
   move <args>
   src.stamina = <eval <src.stamina> - 1>
   f_goalcheck
ENDIF
endif

