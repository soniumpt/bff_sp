                        LOCAL.ATTACKED=1
                    ENDIF
                ENDFOR
            ENDIF
            IF !<LOCAL.ATTACKED>
                LOCAL.SACRIFICE=1
                spelleffect 59 <argn2> <src.uid> 0
            ENDIF
        ENDIF
    ENDIF
endfor

forchars 6
    IF (<MEMORYFINDTYPE.MEMORY_IPET.link> == <src.uid>) || (<ISINPARTY.SRC.PARTY>)
