SRC.TITHING=(<SRC.TITHING> - 30)
LOCAL.SACRIFICE=0

foritems 6
    IF (<TYPE>==t_corpse) && !(<LINK>==04fffffff)
        IF (<LINK.ISINPARTY.SRC.PARTY>)
            spelleffect 59 <argn2> <src.uid> 0
